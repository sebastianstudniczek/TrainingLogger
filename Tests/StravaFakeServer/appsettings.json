{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%LOCALAPPDATA%/DOTNET/TrainingLogger/fake-strava-server-log-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "TrainingLogger": {
    "BaseUri": "http://localhost:5227",
    "SubscriptionEndpoint": "/strava-webhook",
    "PublishActivities": false
  }
}
