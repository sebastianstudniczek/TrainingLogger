{
  "Logging": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%LOCALAPPDATA%/DOTNET/TrainingLogger/log-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Sqlite": "Data Source=..\\LocalDatabase.db"
  },
  "Strava": {
    "BaseUri": "https://www.strava.com",
    "HttpClientName": "StravaClient",
    "AuthScheme": "Bearer",
    "TokenExchangePart": "oauth/token",
    "GetActivitiesPart": "api/v3/athlete/activities",
    "GetActivityByIdPart": "api/v3/activities/{0}",
    "WebhookVerifyToken": "STRAVA"
  }
}
